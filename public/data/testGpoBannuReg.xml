let xmlString = ` 
<G_PVN>
    <BNO></BNO>
    <HEAD>2207</HEAD>
    <PVN></PVN>
    <NARRATION>NASIM JAN SET GGPS LANDI NWTD test </NARRATION>
    <AMOUNT></AMOUNT>
    <ENT_DAT>01-FEB-25</ENT_DAT>
    <CHEQ_NO></CHEQ_NO>
    <CHEQ_DATE></CHEQ_DATE>
    <SNO>8</SNO>
    <DD>CONTACT GPO BANNU : &#10; regeistery and given to General Post office for delevery at you address on 01-05-2024 GPO</DD>
    <NAR>TA/DA GENERAL</NAR>
</G_PVN>
