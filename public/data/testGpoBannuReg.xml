let parser = new DOMParser();
let xmlDoc = parser.parseFromString(xmlString, "text/xml");

// Find the <DD> element
let ddElement = xmlDoc.getElementsByTagName("DD")[0];

// Modify its text content to add a newline
ddElement.textContent = ddElement.textContent.replace("regeistery and given to", "\nregeistery and given to");

